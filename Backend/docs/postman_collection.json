{
  "info": {
    "name": "Micro-Task Market API",
    "description": "API collection for Micro-Task Market backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"phone\": \"08012345678\",\n  \"password\": \"Password123\",\n  \"role\": \"worker\",\n  \"lga\": \"Lafia\",\n  \"neighbourhood\": \"New Market\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"identifier\": \"aunty.z@example.com\",\n  \"password\": \"password123\",\n  \"rememberMe\": true\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/me"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/tasks"
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Clean market stall\",\n  \"description\": \"Need help cleaning after market hours\",\n  \"pay\": 1500,\n  \"location\": \"Lafia New Market\",\n  \"dateTime\": \"2025-01-20T16:00:00Z\",\n  \"mode\": \"single\",\n  \"proofRequired\": true,\n  \"category\": \"cleaning\"\n}"
            },
            "url": "{{baseUrl}}/api/tasks"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Seed Database",
          "request": {
            "method": "POST",
            "header": [
              { "key": "X-Admin-Key", "value": "admin-seed-key-for-demo" }
            ],
            "url": "{{baseUrl}}/api/admin/seed"
          }
        }
      ]
    }
  ]
}
